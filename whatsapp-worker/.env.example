# WhatsApp Worker Configuration
NODE_ENV=development
PORT=4000

# Webservice API Configuration
WEBSERVICE_API_URL=http://localhost:3000
WEBSERVICE_API_TOKEN=your-api-token

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=whatsapp-session
WHATSAPP_WEBHOOK_URL=http://localhost:4000/webhook/whatsapp

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=5000

# Security
API_SECRET_KEY=your-secret-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/worker.log

# Job Queue Configuration
QUEUE_NAME=whatsapp-jobs
QUEUE_REMOVE_ON_COMPLETE=10
QUEUE_REMOVE_ON_FAIL=5

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp Bot Settings
BOT_PREFIX=!
BOT_ADMIN_NUMBERS=+1234567890,+0987654321
BOT_AUTO_REPLY_ENABLED=true
BOT_WELCOME_MESSAGE=¡Hola! Soy un bot de WhatsApp. Envía !help para ver los comandos disponibles.